<?xml version="1.0"  ?>
<odoo>
    <data>
        <template id="report_event_management">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    References
                                </th>
                                <th>
                                    Event Name
                                </th>
                                <th>
                                    Event Type
                                </th>
                                <th>
                                    Customer
                                </th>
                                <th>
                                    Booking Date
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Total Amount
                                </th>
                            </tr>
                        </thead>
                            <t t-foreach="val" t-as="line">
<!--                                <t t-if="line['event_type_id'] == lines['event_type']">-->
                                    <tr>
                                        <td>
                                            <span t-esc="line_index + 1"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['event']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['event_type']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['cust']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['booking_date']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['state']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['grand_total']"/>
                                        </td>
                                    </tr>
                                </t>
<!--                            </t>-->
                            <thead>
                            <tr>
                                <th>
                                    Sl No.
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Item
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Unit of Measure
                                </th>
                                <th>
                                    Sub Total
                                </th>
                            </tr>
                        </thead>
                            <t t-foreach="val" t-as="line">
<!--                                <t t-if="line['event_type_id'] == lines['event_type']">-->
                                    <tr>
                                        <td>
                                            <span t-esc="line_index + 1"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['category']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['name']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['quantity']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['uom']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['unit_price']"/>
                                        </td>

                                    </tr>
                                </t>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>